node {
   def mvnHome
   stage('Preparation') { // for display purposes
      // Get some code from a GitHub repository
      
      environment { 
       accesskey='AKIATVRT64YKFSQDDYWC'
        secret = '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'
    }
      
 
        // build project

      git 'https://github.com/George0713/ShoppingApp.git'

      // Get the Maven tool.
      // ** NOTE: This 'M3' Maven tool must be configured
      // **       in the global configuration.           
      mvnHome = tool 'mvn'
      
      jdk = tool name: 'java8'
       env.JAVA_HOME = "${jdk}"
      echo "jdk installation path is: ${jdk}"
      sh '$JAVA_HOME/bin/java -version'
   }
   stage('Build') {
      // Run the maven build
      withEnv(["MVN_HOME=$mvnHome"]) {
         if (isUnix()) {
            sh '"$MVN_HOME/bin/mvn" -Dmaven.test.failure.ignore clean package'
         } else {
            bat(/"%MVN_HOME%\bin\mvn" -Dmaven.test.failure.ignore clean package/)
         }
      }
   }
   stage('Results') {
      junit '**/target/surefire-reports/TEST-*.xml'
      archiveArtifacts 'target/*.jar'
   }
   

	stage('Deploy'){
				     withAWS(region:'us-east-2',credentials:'amazon') {
     
     
                echo 'Deploying'
              sh " aws elasticbeanstalk create-application-version --region us-east-2  --application-name ShoppingApp    --version-label ${JOB_NAME}-${BUILD_NUMBER}  --description ${BUILD_TAG} --key ${env.accesskey} --secret ${env.secret} "                   
               
              sh " aws elasticbeanstalk update-environment    --region us-east-2    --environment-name Shoppingapp-env   --version-label ${JOB_NAME}-${BUILD_NUMBER}  --key ${env.accesskey} --secret ${env.secret}"
            }
	}
}

